<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}La Meva App{% endblock %}</title>
        {# CDN de Bootstrap per estils ràpids #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        {# HEADER COMÚ (Nav) #}
        <nav class="navbar navbar-dark bg-dark p-3">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="navbar-brand" href="{{ path('app_admin_dashboard') }}">Gestió Projectes</a>
            {% else %}
                <a class="navbar-brand" href="{{ path('app_project_index') }}">Gestió Projectes</a>
            {% endif %}
            <div class="text-white">
                {% if app.user %}
                    Hola, {{ app.user.email }} | <a href="{{ path('app_logout') }}" class="text-warning">Logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="text-white">Login</a>
                {% endif %}
            </div>
        </nav>

        <div class="container-fluid">
            <div class="row">
                {% block body %}{% endblock %}
            </div>
        </div>

        <footer class="text-center py-3 mt-4 border-top">
            <p>&copy; 2026 Exercici Symfony</p>
        </footer>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
